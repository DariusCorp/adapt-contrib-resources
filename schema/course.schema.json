              "default": true
            },
            "_drawerOrder": {
              "type": "number",
              "title": "Poziția în sertar",
              "description": "Ordinea în care această extensie ar trebui să apară ca element în sertar",
              "default": 0
            },
            "title": {
              "type": "string",
              "title": "Titlu",
              "default": "Resurse",
